	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="EditClassModalLabel">Chỉnh Sửa Lớp</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form id="editClassForm" asp-action="EditClass" method="post">
					<input type="hidden" id="editClassId" name="classId" />
					<div class="mb-3">
						<label class="form-label">Mã Lớp</label>
						<input type="text" class="form-control" id="editClassName" name="className" required>
					</div>
					<div class="mb-3">
						<label for="editClassAdvisor" class="form-label">Cố Vấn Học Tập</label>
						<select asp-for="Class.AdvisorId" class="form-select" id="editAdvisorSelect" required>
