@{
    ViewData["Title"] = "Profile Manager Page";
    ViewData["CategoryVisibility"] = "block";
}
<!-- Page content -->
<div class="containeruser p-3">
    <div class="controlheader ms-auto">
        <nav class="navbar">
            <div class="row w-100">
                <div class="col-md-8 d-flex">
                    <form class="d-flex w-100">
                        <div class="input-group w-100">
                            <input type="text" class="form-control" placeholder="Tìm kiếm" aria-label="Username" aria-describedby="basic-addon1">
                            <button class="btn btn-info" type="button" style="z-index:0;"> Tìm</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-4 d-flex justify-content-end">
                    <button class="btn btn-success" 
                            type="button" 
                            onclick="openModal()">
                        Thêm Mới
                    </button>
                </div>
            </div>
        </nav>
    </div>
    <!-- Table -->
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col" style="width:10%">#</th>
                    <th scope="col" style="width:40%">Học Kì</th>
                    <th scope="col" style="width:40%">Năm Học</th>
                    <th scope="col" style="width:10%">Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var period in Model)
                {
                    <tr>
                        <th scope="row">@period.Id</th>
                        <td>@(period.Year.ToString().Substring(2) + period.Semester)</td>
                        <td id="phone-user">@(period.Year + "-" + (period.Year + 1))</td>
                        <td>
                            <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#EditModal"><i class="fa-solid fa-pen-to-square" style="padding-right:2px;"></i> Cập Nhật</button>
                            <form asp-controller="Categories" asp-action="DeleteAcademicYear" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@period.Id" />
                                <button type="submit" 
                                        class="btn btn-outline-danger btn-sm" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#DeleteModal"><i class="fa-solid fa-trash" style="padding-right:2px;"></i> Xóa</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- Pagination -->
    <div class="d-flex justify-content-end mt-3">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    <!-- Add Modal -->
    <div id="AddModal" class="modal" style="display:none; position:fixed; z-index:1; left:0; top:0; width:100%; height:100%; overflow:auto; background-color:rgba(0,0,0,0.4);">
        <div class="modal-content" style="background-color:#fefefe; margin:15% auto; padding:20px; border:1px solid #888; width:30%; position:relative; border-radius:10px;">
            <h2 style="text-align:center; margin-bottom:20px;">Thêm Năm Học</h2>
            <form asp-controller="Categories" asp-action="AddAcademicYear" method="post">
                <div style="margin-bottom:15px;">
                    <label for="year" style="display:block; margin-bottom:5px;">Năm Học</label>
                    <input type="number" id="year" name="year" style="width:100%; padding:10px; border:1px solid #ccc; border-radius:4px;" required>
                </div>
                <div style="margin-bottom:15px;">
                    <label for="semester" style="display:block; margin-bottom:5px;">Học Kỳ</label>
                    <select id="semester" name="semester" style="width:100%; padding:10px; border:1px solid #ccc; border-radius:4px;" required>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                    </select>
                </div>
                <div style="text-align:right;">
                    <button type="button" class="btn btn-outline-danger" style="padding:10px 20px; margin-right:10px;" onclick="closeModal()">Hủy</button>
                    <button type="submit" class="btn btn-outline-primary" style="padding:10px 20px;">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>
