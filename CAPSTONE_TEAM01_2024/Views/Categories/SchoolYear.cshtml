@using Newtonsoft.Json.Linq
@if (TempData["MessageAddYear"] != null)
{
    <div class="alert alert-@TempData["MessageAddType"]">
        @TempData["MessageAddYear"]
    </div>
}
@if (TempData["MessageEditYear"] != null)
{
    <div class="alert alert-@TempData["MessageEditType"]">
        @TempData["MessageEditYear"]
    </div>
}
@{
    ViewData["Title"] = "Profile Manager Page";
    ViewData["CategoryVisibility"] = "block";
}
<!-- Page content -->
<div class="containeruser p-3">
    <div class="controlheader ms-auto">
        <nav class="navbar">
            <div class="row w-100">
                <div class="col-md-6 d-flex">
                        <div class="input-group w-100">
                        <input id="SchoolYearSearchField" type="text" class="form-control" placeholder="Nhập năm học cần tìm" oninput="filterSchoolYearTable()">
                            <button class="btn btn-secondary"
                                    type="button"
                                    style="white-space: nowrap; z-index:1;"
                                    onclick="clearSchoolYearSearch()">
                                Hủy Tìm Kiếm
                            </button>
                        </div>
                </div>
                <div class="col-md-6 d-flex justify-content-end">
                    <button class="btn btn-success" 
                            type="button" 
                            onclick="openSchoolYearAddModal()">
                        Thêm Mới
                    </button>
                </div>
            </div>
        </nav>
    </div>
    <!-- Table -->
    <div class="table-responsive">
        <table id="queryResults" class="table table-striped">
            <thead>
                <tr>
                    <th scope="col" style="width:10%">#</th>
                    <th scope="col" style="width:40%">Học Kì</th>
                    <th scope="col" style="width:40%">Năm Học</th>
                    <th scope="col" style="width:10%">Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int number = 0;
                }
                @foreach (AcademicPeriod period in Model)
                {
                    number++;
                    <tr style="cursor: pointer; background-color: white;"
                        onmouseover="this.style.backgroundColor='#c7c1c1 '; this.style.color='white';"
                        onmouseout="this.style.backgroundColor='white'; this.style.color='black';"
                        onclick="window.location.href='/ClassManager/ClassList/@period.Id'">
                        <th scope="row">@number</th>
                        <td>@(period.Year.ToString().Substring(2) + period.Semester)</td>
                        <td>@(period.Year + "-" + (period.Year + 1))</td>
                        <td>
                            <button style="z-index:2;"
                                    type="button"
                                    class="btn btn-outline-primary btn-sm"
                                    onclick="event.stopPropagation(); openSchoolYearEditModal(@period.Id, @period.Year, @period.Semester)">
                                <i class="fa-solid fa-pen-to-square" style="padding-right:2px;"></i> Cập Nhật
                            </button>
                            <button style="z-index:2; float:right;"
                                    class="btn btn-outline-danger btn-sm"
                                    onclick="event.stopPropagation(); openSchoolYearConfirmModal(@period.Id)">
                                Xóa
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- Pagination -->
    <div class="d-flex justify-content-end mt-3">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    <!-- Add Modal -->
    <div id="SchoolYearAddModal" class="modal" style="display:none; position:fixed; z-index:1; left:0; top:0; width:100%; height:100%; overflow:auto; background-color:rgba(0,0,0,0.4);">
        <div class="modal-content" style="background-color:#fefefe; margin:15% auto; padding:20px; border:1px solid #888; width:30%; position:relative; border-radius:10px;">
            <h2 style="text-align:center; margin-bottom:20px;">Thêm Năm Học</h2>
            <form asp-controller="Categories" asp-action="AddAcademicYear" method="post">
                <div style="margin-bottom:15px;">
                    <label for="year" style="display:block; margin-bottom:5px;">Năm Học</label>
                    <input type="number" id="year" name="year" style="width:100%; padding:10px; border:1px solid #ccc; border-radius:4px;" required>
                </div>
                <div style="margin-bottom:15px;">
                    <label for="semester" style="display:block; margin-bottom:5px;">Học Kỳ</label>
                    <select id="semester" name="semester" style="width:100%; padding:10px; border:1px solid #ccc; border-radius:4px;" required>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                    </select>
                </div>
                <div style="text-align:right;">
                    <button type="button" class="btn btn-outline-danger" style="padding:10px 20px; margin-right:10px;" onclick="closeSchoolYearAddModal()">Hủy</button>
                    <button type="submit" class="btn btn-outline-primary" style="padding:10px 20px;">Lưu</button>
                </div>
            </form>
        </div>
    </div>
    <!-- Confirm Delete Modal -->
    <div id="SchoolYearConfirmDeleteModal" class="modal" style="display:none; position:fixed; z-index:1; left:0; top:0; width:100%; height:100%; overflow:auto; background-color:rgba(0,0,0,0.4);">
        <div class="modal-content" style="background-color:#fefefe; margin:15% auto; padding:20px; border:1px solid #888; width:30%; height:20%; position:relative; border-radius:10px;">
            <h2 style="text-align:center; margin-bottom:20px;">Xóa Năm Học</h2>
            <p style="text-align:center;">Sau khi xóa sẽ không thể khôi phục lại. Xác nhận xóa?</p>
            <div style="text-align:center;">
                <button type="button" class="btn btn-outline-secondary" style="padding:10px 20px; margin-right:10px;" onclick="closeSchoolYearConfirmModal()">HỦY</button>
                <button type="button" class="btn btn-outline-danger" style="padding:10px 20px;" onclick="confirmSchoolYearDelete()">XÁC NHẬN</button>
            </div>
        </div>
    </div>
    <!-- Edit Modal -->
    <div id="SchoolYearEditModal" class="modal" style="display:none; position:fixed; z-index:1; left:0; top:0; width:100%; height:100%; overflow:auto; background-color:rgba(0,0,0,0.4);">
        <div class="modal-content" style="background-color:#fefefe; margin:15% auto; padding:20px; border:1px solid #888; width:30%; position:relative; border-radius:10px;">
            <h2 style="text-align:center; margin-bottom:20px;">Chỉnh Sửa Năm Học</h2>
            <form id="editForm" asp-controller="Categories" asp-action="EditAcademicYear" method="post">
                <input type="hidden" id="SchoolYearEditId" name="id" />
                <div style="margin-bottom:15px;">
                    <label for="SchoolYearEditYear" style="display:block; margin-bottom:5px;">Năm Học</label>
                    <input type="number" id="SchoolYearEditYear" name="year" style="width:100%; padding:10px; border:1px solid #ccc; border-radius:4px;" required>
                </div>
                <div style="margin-bottom:15px;">
                    <label for="SchoolYearEditSemester" style="display:block; margin-bottom:5px;">Học Kỳ</label>
                    <select id="SchoolYearEditSemester" name="semester" style="width:100%; padding:10px; border:1px solid #ccc; border-radius:4px;" required>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                    </select>
                </div>
                <div style="text-align:right;">
                    <button type="button" class="btn btn-outline-secondary" style="padding:10px 20px; margin-right:10px;" onclick="closeSchoolYearEditModal()">Hủy</button>
                    <button type="submit" class="btn btn-outline-primary" style="padding:10px 20px;">Lưu</button>
                </div>
            </form>
        </div>
    </div>

</div>
<script>
    // For Delete Confirmation in SchoolYear
    var SchoolYearConfirmDeleteModal = document.getElementById("SchoolYearConfirmDeleteModal");
    var deleteId = 0;

    function openSchoolYearConfirmModal(id) {
        deleteId = id;
        SchoolYearConfirmDeleteModal.style.display = "block";
    }

    function closeSchoolYearConfirmModal() {
        SchoolYearConfirmDeleteModal.style.display = "none";
    }

    function confirmSchoolYearDelete() {
        var form = document.createElement("form");
        form.method = "post";
        form.action = "/Categories/DeleteAcademicYear";

        var input = document.createElement("input");
        input.type = "hidden";
        input.name = "id";
        input.value = deleteId;
        form.appendChild(input);

        document.body.appendChild(form);
        form.submit();
    }

    var modalContent = document.querySelector("#SchoolYearConfirmDeleteModal .modal-content");
    modalContent.addEventListener('click', function (event) {
        event.stopPropagation();
    });

    // For Edit in SchoolYear
    var SchoolYearEditModal = document.getElementById("SchoolYearEditModal");

    function openSchoolYearEditModal(id, year, semester) {
        document.getElementById("SchoolYearEditId").value = id;
        document.getElementById("SchoolYearEditYear").value = year;
        document.getElementById("SchoolYearEditSemester").value = semester;
        SchoolYearEditModal.style.display = "block";
    }

    function closeSchoolYearEditModal() {
        SchoolYearEditModal.style.display = "none";
    }

    // For Adding in SchoolYear
    var SchoolYearAddModal = document.getElementById("SchoolYearAddModal");

    function openSchoolYearAddModal() {
        SchoolYearAddModal.style.display = "block";
    }

    function closeSchoolYearAddModal() {
        SchoolYearAddModal.style.display = "none";
    }

    // Get the <span> element that closes the add modal
    var span = document.getElementsByClassName("close")[0];
    span.addEventListener('click', function () {
        closeSchoolYearAddModal();
    });

    //For Searching SchoolYear
    function filterSchoolYearTable() {
        // Get the search input value
        var input = document.getElementById('SchoolYearSearchField').value.toLowerCase();
        // Get the table and its rows
        var table = document.getElementById('queryResults');
        var rows = table.getElementsByTagName('tr');

        // Loop through the rows and hide those that don't match the search query
        for (var i = 1; i < rows.length; i++) { // Start from 1 to skip the header row
            var cells = rows[i].getElementsByTagName('td');
            if (cells.length > 0) {
                var year = cells[1].innerText.toLowerCase();
                if (year.includes(input)) {
                    rows[i].style.display = '';
                } else {
                    rows[i].style.display = 'none';
                }
            }
        }
    }
    // Function to clear the search field and reset the table
    function clearSchoolYearSearch() {
        document.getElementById('SchoolYearSearchField').value = '';
        filterTable();
    }
</script>
