@model ProfileManagerModel
	<div class="modal fade" id="DeleteModal-@Model.Id" data-bs-backdrop="false" tabindex="-1" aria-labelledby="DeleteModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="DeleteModalLabel">Xóa Tài Khoản</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<form asp-action="Delete" method="post">
				
				<div class="modal-body">
					<input type="hidden" asp-for="Id" />	
					<p>Bạn có chắc chắn muốn xóa tài khoản này không?</p>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
					<button type="submit" class="btn btn-danger">Xóa</button>
				</div>
			</form>
		</div>
	</div>
	</div>