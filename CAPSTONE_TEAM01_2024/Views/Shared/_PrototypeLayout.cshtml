<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>@ViewData["Title"] - CAPSTONE_TEAM01_2024</title>

    <link rel="stylesheet" href="~/CAPSTONE_TEAM01_2024.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
</head>
<body>
    <!--Page's Head-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="margin-bottom: 0px; height: 100%;">
        <div class="container-fluid">
            <a class="navbar-brand" href="#" style="text-transform: uppercase; color: #fff; font-weight: 600; font-size: 25px;">
                <img src="https://insacmau.com/wp-content/uploads/2023/02/logo-van-lang.png" alt="Logo Đại học Văn Lang">
                Quản Lý Hoạt Động Cố Vấn Học Tập
            </a>
            <div class="d-flex">
                <button class="btn btn-light me-2" type="button">
                    <i class="bi bi-bell"></i>
                </button>
                <button class="btn btn-light me-2" type="button">
                    <i class="bi bi-chat-dots"></i>
                </button>
                <div class="dropdown" style="position: relative;">
                    <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle"></i> @User.Identity!.Name
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="background-color: #fff; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);text-align: center; position: absolute; right: 0; padding: 0px">
                        <li class="btn-logout">
                            <form class="form-inline" asp-action="logout" asp-controller="users" id="logoutForm">
                                <button type="submit" class="dropdown-item" href="#" style="color: #333; font-size: 18px;">
                                    <i class="bi bi-box-arrow-right" style="font-size:18px; margin-right:5px"></i>
                                    <span>Logout</span>
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <!--Content of page-->
    <div class="container-fluid" id="Content_Display">
        <div class="row">
            <!--Side Navbar-->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block sidebar" style="position: relative;">
                <div class="overlay" style="position: absolute; left: 0; top: 0; background-color: #00000094; width: 100%; height:100%;">
                    <ul class="nav flex-column" style="font-size: 25px; margin-top: 25px;">
                        <li class="nav-item">
                            <a class="nav-link"
                               href="/Home/HomePage"
                                style="text-decoration:none;">
                                <i class="bi bi-house-door"></i> Trang Chủ

                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"
                               href="/ProfileManager/Index_ProfileManager"
                                <i class="bi bi-person-lines-fill"></i> Quản Lý Tài Khoản
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" 
                               href="/Statistics/ShowStatistics"
                               style="text-decoration:none">
                                <i class="bi bi-graph-up"></i> Thống Kê
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdownToggle">
                                <i class="bi bi-list"></i> Danh Mục
                            </a>
                            <ul class="dropdown-menu show" id="dropdownMenu2" style="margin-left: 30px; display:none">
                                <li>
                                    <a class="dropdown-item" href="/Categories/SchoolYear" style="text-decoration:none">
                                        <i class="bi bi-calendar"></i> Danh Sách Năm Học
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Categories/ClassList" style="text-decoration:none">
                                        <i class="bi bi-person-badge"></i> Quản Lý Lớp Học
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Categories/SemesterPlan" style="text-decoration:none">
                                        <i class="bi bi-book"></i> Kế Hoạch Học Kỳ
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Categories/EndSemesterReport" style="text-decoration:none">
                                        <i class="bi bi-file-earmark-text"></i> Báo Cáo Cuối Kỳ
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
            <!--View's Contents-->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-4 content" id="main-content">
                @RenderBody()
            </main>
        </div>
    </div>
    <!--Page's Footer' -->
    <footer class="text-muted">
        <div class="container-fluid" id="Main_Footer">
            <div style="float:left; display:inline;">
                <b style="color:#d72235;">&copy; 2024 - Đại học Văn Lang<br></b>
                <b>Khoa Công Nghệ Thông Tin</b>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Handle dropdown menu state
            const categoryContent = document.getElementById("dropdownMenu2");
            const savedState = sessionStorage.getItem("CategoryVisibility");

            if (savedState) {
                categoryContent.style.display = savedState;
            }

            document.getElementById("dropdownToggle").addEventListener("click", function (event) {
                event.preventDefault();
                if (categoryContent.style.display === "none" || categoryContent.style.display === "") {
                    categoryContent.style.display = "block";
                    sessionStorage.setItem("CategoryVisibility", "block");
                } else {
                    categoryContent.style.display = "none";
                    sessionStorage.setItem("CategoryVisibility", "none");
                }
            });

            // Highlight active menu item
            var currentUrl = window.location.pathname;
            var navLinks = document.querySelectorAll('.nav-link, .dropdown-item');

            navLinks.forEach(function (link) {
                // Remove existing active styles
                link.classList.remove('active');
                link.style.border = '';

                // Check if the link matches the current URL
                if (link.getAttribute('href') === currentUrl) {
                    link.classList.add('active');
                }
            });

            // Special case for ClassList
            if (currentUrl.includes("ClassList")) {
                var schoolYearLink = Array.from(navLinks).find(link => link.href.includes("SchoolYear"));
                if (schoolYearLink) {
                    schoolYearLink.classList.add('active');
                }
            }
        });

        // Clear session data when logout
        document.addEventListener("DOMContentLoaded", function () {
            const logoutButton = document.getElementById("logoutForm");

            if (logoutButton) {
                logoutButton.addEventListener("click", function () {
                    sessionStorage.clear();
                });
            }
        });

    </script>
</body>
