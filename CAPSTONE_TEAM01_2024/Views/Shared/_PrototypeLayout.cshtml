<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>@ViewData["Title"] - CAPSTONE_TEAM01_2024</title>

    <link rel="stylesheet" href="~/CAPSTONE_TEAM01_2024.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&amp;display=swap" rel="stylesheet">
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
</head>
<body>
    <!--Page's Head-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="margin-bottom: 0px; height: 100%;">
        <div class="container-fluid">
            <a class="navbar-brand" href="#" style="text-transform: uppercase; color: #fff; font-weight: 600; font-size: 25px;">
                <img src="https://insacmau.com/wp-content/uploads/2023/02/logo-van-lang.png" alt="Logo Đại học Văn Lang">
                Quản Lý Hoạt Động Cố Vấn Học Tập
            </a>
            <div class="d-flex">
                <button class="btn btn-light me-2" type="button">
                    <i class="bi bi-bell"></i>
                </button>
                <button class="btn btn-light me-2" type="button">
                    <i class="bi bi-chat-dots"></i>
                </button>
                <div class="dropdown" style="position: relative;">
                    <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton">
                        <i class="bi bi-person-circle"></i> @User.Identity!.Name
                    </button>
                    <ul class="dropdown-menu" id="dropdownMenu" style="background-color: #fff; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); text-align: center; right: 0; padding: 0px; display: none; position:absolute;">
                        <li class="btn-logout">
                            <form class="form-inline" asp-action="logout" asp-controller="users" id="logoutForm">
                                <button type="submit" class="dropdown-item" style="color: #333; font-size: 18px;">
                                    <i class="bi bi-box-arrow-right" style="font-size:18px; margin-right:5px"></i>
                                    Đăng Xuất
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <!--Content of page-->
    <div class="container-fluid" id="Content_Display">
        <div class="row">
            <!--Side Navbar-->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block sidebar">
                <div class="overlay">
                    <ul class="nav flex-column" style="font-size: 25px; list-style-type: none;">
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/HomePage" style="text-decoration:none;">
                                <i class="bi bi-house-door"></i> TRANG CHỦ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="collapse" href="#dropdownMenu1" role="button" aria-expanded="false" aria-controls="dropdownMenu1">
                                <i class="bi bi-people"></i> TÀI KHOẢN
                            </a>
                            <ul class="collapse" id="dropdownMenu1" style="list-style-type: none; padding-left: 35px;">
                                <li>
                                    <a class="dropdown-item" href="/ProfileManager/StudentProfiles" style="text-decoration:none; color: #fff; font-size:1.2rem; font-weight:bold;" onmouseover="this.style.backgroundColor='#c82333'; this.style.color='#fff';" onmouseout="this.style.backgroundColor='transparent'; this.style.color='#fff';">
                                        <i class="bi bi-person-vcard"></i> Sinh viên
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/ProfileManager/AdvisorProfiles" style="text-decoration:none; color: #fff; font-size:1.2rem; font-weight:bold;" onmouseover="this.style.backgroundColor='#c82333'; this.style.color='#fff';" onmouseout="this.style.backgroundColor='transparent'; this.style.color='#fff';">
                                        <i class="bi bi-person-vcard-fill"></i> Cố vấn
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Statistics/ShowStatistics" style="text-decoration:none;">
                                <i class="bi bi-graph-up"></i> THỐNG KÊ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="collapse" href="#dropdownMenu2" role="button" aria-expanded="false" aria-controls="dropdownMenu2">
                                <i class="bi bi-list"></i> DANH MỤC
                            </a>
                            <ul class="collapse" id="dropdownMenu2" style="list-style-type: none; padding-left: 35px;">
                                <li>
                                    <a class="dropdown-item" href="/Categories/SchoolYear" style="text-decoration:none; color: #fff; font-size:1.2rem; font-weight:bold;" onmouseover="this.style.backgroundColor='#c82333'; this.style.color='#fff';" onmouseout="this.style.backgroundColor='transparent'; this.style.color='#fff';">
                                        <i class="bi bi-calendar"></i> Năm Học
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Categories/ClassList" style="text-decoration:none; color: #fff; font-size:1.2rem; font-weight:bold;" onmouseover="this.style.backgroundColor='#c82333'; this.style.color='#fff';" onmouseout="this.style.backgroundColor='transparent'; this.style.color='#fff';">
                                        <i class="bi bi-person-badge"></i> Lớp Học
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Categories/SemesterPlan" style="text-decoration:none; color: #fff; font-size:1.2rem; font-weight:bold;" onmouseover="this.style.backgroundColor='#c82333'; this.style.color='#fff';" onmouseout="this.style.backgroundColor='transparent'; this.style.color='#fff';">
                                        <i class="bi bi-book"></i> Kế Hoạch
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Categories/EndSemesterReport" style="text-decoration:none; color: #fff; font-size:1.2rem; font-weight:bold;" onmouseover="this.style.backgroundColor='#c82333'; this.style.color='#fff';" onmouseout="this.style.backgroundColor='transparent'; this.style.color='#fff';">
                                        <i class="bi bi-file-earmark-text"></i> Báo Cáo
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
         </nav>
            <!--View's Contents-->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-4 content" id="main-content">
                @RenderBody()
            </main>
        </div>
    </div>
    <!--Page's Footer' -->
    <footer class="text-muted">
        <div class="container-fluid" id="Main_Footer">
            <div style="float:left; display:inline;">
                <b style="color:#d72235;">&copy; 2024 - Đại học Văn Lang<br></b>
                <b>Khoa Công Nghệ Thông Tin</b>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
//Logout Button JS
        document.getElementById("dropdownMenuButton").addEventListener("click", function () {
            var dropdownMenu = document.getElementById("dropdownMenu");
            if (dropdownMenu.style.display === "block") {
                dropdownMenu.style.display = "none";
            } else {
                dropdownMenu.style.display = "block";
            }
        });
    </script>
</body>
