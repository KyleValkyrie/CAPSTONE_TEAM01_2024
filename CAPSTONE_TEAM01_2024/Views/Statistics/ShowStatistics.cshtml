@{
    ViewData["Title"] = "Show Statistic";
    ViewData["CategoryVisibility"] = ViewData["CategoryVisibility"];
}
<style>
    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .card-header {
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 70px; 
        box-shadow: inset 0 4px 6px rgba(0, 0, 0, 0.2);
        position: relative;
    }

    .card-header i {
        font-size: 2rem;
    }

    .card-body h5 {
        font-size: 1.2rem;
        color: #555;
    }

</style>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<div class="content-wrapper" style="min-height: 912.2px;">
    <!-- Content Header (Page header) -->
    <header class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6 ms-5">
                    <h3 class="m-0">Dashboard</h3>
                </div>
            </div>
        </div>
    </header>

    <!-- Nội dung chính -->
    <div class="container mt-4">
        <div class="row">
            <!-- Card 1 -->
            <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                <div class="card shadow text-center">
                    <div class="card-header text-white d-flex align-items-center justify-content-center" style="background-color: rgba(255, 159, 64, 1)">
                        <i class="material-icons" style="font-size: 2.5rem;">account_circle</i>
                    </div>
                    <div class="card-body" style="height: 120px">
                        <h5 class="card-title">BCN Khoa</h5>
                        <h3>15</h3>
                        <p class="text-muted"><i class="material-icons" style="font-size: 1.2rem; vertical-align: middle">account_circle</i> Đang Sử Dụng Hệ Thống</p>
                    </div>
                </div>
            </div>
            <!-- Card 2 -->
            <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                <div class="card shadow text-center">
                    <div class="card-header text-white d-flex align-items-center justify-content-center" style="background-color: #1b6ec2   ">
                        <i class="material-icons" style="font-size: 2.5rem;">person</i>
                    </div>
                    <div class="card-body" style="height: 120px">
                        <h5 class="card-title">CVHT</h5>
                        <h3>20</h3>
                        <p class="text-muted">
                            <i class="material-icons" style="font-size: 1.2rem; vertical-align: middle;">person</i>
                            Đang Sử Dụng Hệ Thống
                        </p>
                    </div>
                </div>
            </div>
            
            <!-- Card 3 -->
            <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                <div class="card shadow text-center">
                    <div class="card-header bg-success text-white d-flex align-items-center justify-content-center">
                        <i class="material-icons" style="font-size: 2.5rem;">group</i>
                    </div>
                    <div class="card-body" style="height: 120px">
                        <h5 class="card-title">Sinh Viên</h5>
                        <h3>4</h3>
                        <p class="text-muted"><i class="material-icons" style="font-size: 1.2rem; vertical-align: middle" >group</i> Đang Sử Dụng Hệ Thống</p>
                    </div>
                </div>
            </div>
            <!-- Card 4 -->
            <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                <div class="card shadow text-center">
                    <div class="card-header bg-danger text-white d-flex align-items-center justify-content-center">
                        <i class="material-icons" style="font-size: 2.5rem;">class</i>
                    </div>
                    <div class="card-body" style="height: 120px">
                        <h5 class="card-title">Tổng Lớp</h5>
                        <h3>17</h3>
                        <p class="text-muted"><i class="material-icons" style="font-size: 1.2rem; vertical-align: middle">school</i> Có Trên Hệ Thống</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts -->
        <div class="row">
            <!-- Chart 1 -->
            <div class="col-lg-6 col-md-12 mb-4">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5>Số Lượng Kế Hoạch</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="barChart1"></canvas>
                    </div>
                </div>
            </div>
            <!-- Chart 2 -->
            <div class="col-lg-6 col-md-12 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5>Số Lượng Báo Cáo</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="barChart2"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





<!-- Chart.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.0.1/dist/chart.umd.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Plugin to add shadow
        const shadowPlugin = {
            id: 'shadowPlugin',
            beforeDraw: function (chart) {
                const ctx = chart.ctx;
                ctx.save();
                ctx.shadowColor = 'rgba(0, 0, 0, 0.3)';
                ctx.shadowBlur = 10;
                ctx.shadowOffsetX = 5;
                ctx.shadowOffsetY = 5;
            },
            afterDraw: function (chart) {
                chart.ctx.restore();
            }
        };

        // Register plugin
        Chart.register(shadowPlugin);

        // Bar Chart 1 Configuration
        var barCtx1 = document.getElementById('barChart1').getContext('2d');
        var barChart1 = new Chart(barCtx1, {
            type: 'bar',
            data: {
                labels: ['2022', '2023', '2024', '2025', '2026'],
                datasets: [
                    {
                        label: 'Số Lượng ',
                        data: [35, 22, 10, 27, 19, 8],
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.8)',
                            'rgba(255, 206, 86, 0.8)',
                            'rgba(153, 102, 255, 0.8)',
                            'rgba(255, 159, 64, 0.8)',
                            'rgba(255, 99, 132, 0.8)'
                        ],
                        borderColor: [
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)',
                            'rgba(255, 99, 132, 1)'
                        ],
                        borderWidth: 1
                    }
                ]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false // Tắt hiển thị legend
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Bar Chart 2 Configuration
        var barCtx2 = document.getElementById('barChart2').getContext('2d');
        var barChart2 = new Chart(barCtx2, {
            type: 'bar',
            data: {
                labels: ['2022', '2023', '2024', '2025', '2026'],
                datasets: [
                    {
                        label: 'Số Lượng',
                        data: [12, 19, 3, 5, 2, 3],
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.8)',
                            'rgba(255, 206, 86, 0.8)',
                            'rgba(153, 102, 255, 0.8)',
                            'rgba(255, 159, 64, 0.8)',
                            'rgba(255, 99, 132, 0.8)'
                        ],
                        borderColor: [
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)',
                            'rgba(255, 99, 132, 1)'
                        ],
                        borderWidth: 1
                    }
                ]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false // Tắt hiển thị legend
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    });
</script>

